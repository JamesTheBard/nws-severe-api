{
  "embeds": [
    {
      "title": "{{ title }}",
      "description": "## {{ headline }}",
      "url": "{{ url }}",
      "color": "{{ color }}",
      "timestamp": "{{ timestamp }}",
      "image": {
        "url": "{{ map_url }}"
      },
      "author": {
        "name": "National Weather Service",
        "url": "https://www.spc.noaa.gov"
      },
      "fields": [
        {
          "name": "Affected Counties",
          "value": "{{ counties }}"
        },
        {% if tornado_possible %}
        {
          "name": "Tornado Detection",
          "value": "{{ tornado_possible | join | title }}"
        },
        {% endif %}
        {
          "name": "More Information",
          "value": "{{ description }}"
        }
      ]
    }
  ]
}